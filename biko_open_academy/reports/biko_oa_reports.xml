<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <record id="action_sessions_report" model="ir.actions.report">
        <field name="name">Sessions and attendees</field>
        <field name="model">biko.oa.sessions</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">biko_open_academy.sessions_report</field>
        <field name="report_file">biko_open_academy.sessions_report</field>
        <field name="binding_model_id" ref="model_biko_oa_sessions"/>
        <field name="binding_type">report</field>
    </record>

    <template id="sessions_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <h1>Session: <t t-out="o.name"/></h1>
                <p>
                    <strong>Period: </strong>
                        <t t-esc="o.start_date.strftime('%d %B, %Y')"/> - <t t-out="o.end_date.strftime('%d %B, %Y')"/>
                </p>
                <strong>Attendees</strong>
                <p/>
                <table border="1" style="border-collapse: collapse; width: 100%;">
                    <tbody>
                        <t t-foreach="o.attendee_id" t-as="att">
                            <tr>
                                <td><t t-out="att.name"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </t>
        </t>
    </template>

</odoo>