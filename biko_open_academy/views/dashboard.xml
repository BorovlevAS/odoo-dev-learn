<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <record model="ir.actions.act_window" id="act_biko_oa_sessions_calendar">
        <field name="name">Sessions</field>
        <field name="res_model">biko.oa.sessions</field>
        <field name="view_mode">calendar</field>
        <field name="view_id" ref="view_biko_oa_sessions_calendar"/>
    </record>

    <record model="ir.actions.act_window" id="act_biko_oa_sessions_graph">
        <field name="name">Sessions</field>
        <field name="res_model">biko.oa.sessions</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="view_biko_oa_sessions_graph"/>
    </record>

    <record id="view_biko_oa_dashboard" model="ir.ui.view">
        <field name="name">Dashboard Form</field>
        <field name="model">board.board</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Open Academy Dashboard">
                <board style="2-1">
                    <column>
                        <action
                            string="Calendar"
                            name="%(act_biko_oa_sessions_calendar)d"/>
                    </column>
                    <column>
                        <action
                            string="Number of attendees"
                            name="%(act_biko_oa_sessions_graph)d"/>
                        <action
                            string="List of courses"
                            name="%(act_biko_oa_courses_list)d"/>
                    </column>
                </board>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_biko_oa_dashboard">
        <field name="name">Open Academy Dashboard</field>
        <field name="res_model">board.board</field>
        <field name="view_mode">form</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="view_biko_oa_dashboard"/>
    </record>

    <menuitem
        id="biko_oa_dashboard"
        name="Dashboard"
        parent="biko_open_academy.biko_oa_root"
        action="act_biko_oa_dashboard"
        sequence="0"/>

</odoo>