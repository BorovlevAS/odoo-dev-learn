<odoo>
    <data>

        <record model="ir.actions.act_window" id="act_biko_oa_courses_list">
            <field name="name">BIKO Open Academy: courses</field>
            <field name="res_model">biko.oa.course</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Course in your course's list
                </p>
                <p>
                    Odoo helps you track all activities related to your courses.
                </p>
            </field>
        </record>

        <record id="view_biko_oa_courses_tree" model="ir.ui.view">
            <field name="name">biko.oa.course.tree</field>
            <field name="model">biko.oa.course</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="title" string="Title"/>
                    <field name="description" string="Description"/>
                </tree>
            </field>
        </record>

        <record id="view_biko_oa_courses_kanban" model="ir.ui.view">
            <field name="name">biko.oa.course.kanban</field>
            <field name="model">biko.oa.course</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="title"/>
                    <field name="description"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <ul>
                                        <li>
                                            <h3><field name="title"/></h3>
                                        </li>
                                        <li><field name="description"/></li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>