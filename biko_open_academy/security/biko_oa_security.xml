<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="module_category_openacademy" model="ir.module.category">
        <field name="name">BIKO: Open Academy</field>
        <field name="sequence">1</field>
    </record>

    <record id="group_biko_oa_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_openacademy"/>
     </record>

    <record id="edit_only_users_courses" model="ir.rule">
        <field name="name">Have access only for user's courses or courses without responsible user</field>
        <field name="model_id" ref="model_biko_oa_course"/>
        <field name="groups" eval="[(4, ref('biko_open_academy.group_biko_oa_manager'))]"/>
        <field name="perm_read" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="1" />
        <field name="domain_force">['|',('resp_user_id','=',False), ('resp_user_id','=',user.id)]</field>
    </record>

</odoo>